{
  "name": "@raikou/global-store",
  "version": "0.0.1-beta.8",
  "main": "index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts src/plugin.ts --dts --format esm,cjs --clean && pnpm minify",
    "minify": "jsmin -o dist/index.js dist/index.js && jsmin -o dist/index.mjs dist/index.mjs",
    "lint": "eslint \"**/*.ts*\""
  },
  "dependencies": {
    "pure-store": "^1.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.3.3",
    "@unocss/preset-mini": "^0.58.0",
    "typescript": "^5.1.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
