{
  "name": "@raikou/system",
  "version": "0.0.1-beta.8",
  "main": "index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./plugin.js": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.mjs",
      "require": "./dist/plugin.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist/**"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts src/plugin.ts --dts --format esm,cjs --clean && pnpm run minify && pnpm run build:css && pnpm run build:support_files",
    "build:css": "postcss src/styles.css --dir dist",
    "build:support_files": "if [[ \"$GITHUB_ACTIONS\" == \"true\" ]]; then pnpm run build:github:support_files; else pnpm run build:local:support_files; fi",
    "build:github:support_files": "if [[ \"$OSTYPE\" == \"darwin\"* ]]; then pnpm run build:global:mac_component_names && pnpm run build:global:mac_css_modules; elif [[ \"$OSTYPE\" == \"linux\"* ]]; then pnpm run build:global:linux_component_names && pnpm run build:global:linux_css_modules; fi",
    "build:github:linux_component_names": "/home/runner/work/raikou/raikou/packages/raikou/system/src/support/component_names/linux_component-names --config /packages/raikou/system/src/support/component_names/config.toml --output /packages/raikou/system/dist/component_names.txt",
    "build:github:linux_css_modules": "/home/runner/work/raikou/raikou/packages/raikou/system/src/support/css_modules/linux_css-modules --config /packages/raikou/system/src/support/css_modules/config.toml --output /packages/raikou/system/dist/css_modules.txt",
    "build:local:support_files": "if [[ \"$OSTYPE\" == \"darwin\"* ]]; then pnpm run build:local:mac_component_names && pnpm run build:local:mac_css_modules; elif [[ \"$OSTYPE\" == \"linux\"* ]]; then pnpm run build:local:linux_component_names && pnpm run build:local:linux_css_modules; fi",
    "build:local:mac_component_names": "src/support/component_names/mac_component-names --config /packages/raikou/system/src/support/component_names/config.toml --output /packages/raikou/system/dist/component_names.txt",
    "build:local:mac_css_modules": "src/support/css_modules/mac_css-modules --config /packages/raikou/system/src/support/css_modules/config.toml --output /packages/raikou/system/dist/css_modules.txt",
    "build:local:linux_component_names": "src/support/component_names/linux_component-names --config /packages/raikou/system/src/support/component_names/config.toml --output /packages/raikou/system/dist/component_names.txt",
    "build:local:linux_css_modules": "src/support/css_modules/linux_css-modules --config /packages/raikou/system/src/support/css_modules/config.toml --output /packages/raikou/system/dist/css_modules.txt",
    "lint": "eslint \"**/*.ts*\"",
    "minify": "jsmin -o dist/index.js dist/index.js && jsmin -o dist/index.mjs dist/index.mjs"
  },
  "peerDependencies": {
    "@raikou/global-store": ">=0.0.1-alpha.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@raikou/global-store": "workspace:*",
    "fast-glob": "^3.3.2",
    "next-themes": "^0.2.1",
    "type-fest": "^4.0.0",
    "tslib": "^2.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.3.3",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.8",
    "postcss-cli": "^11.0.0",
    "typescript": "^5.1.6",
    "unocss": "^0.56.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
