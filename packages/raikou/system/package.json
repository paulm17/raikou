{
  "name": "@raikou/system",
  "version": "0.0.1-beta.8",
  "main": "index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./plugin.js": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.mjs",
      "require": "./dist/plugin.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist/**"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts src/plugin.ts --dts --format esm,cjs --clean && pnpm run minify && pnpm run build:css && echo $GITHUB_EVENT_NAME && echo '|' && echo $GITHUB_WORKFLOW && echo '|' && echo $GITHUB_WORKSPACE",
    "build:css": "postcss src/styles.css --dir dist",
    "build:support_files": "esno scripts/generate-support-files",
    "lint": "eslint \"**/*.ts*\"",
    "minify": "jsmin -o dist/index.js dist/index.js && jsmin -o dist/index.mjs dist/index.mjs"
  },
  "peerDependencies": {
    "@raikou/global-store": ">=0.0.1-alpha.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@raikou/global-store": "workspace:*",
    "fast-glob": "^3.3.2",
    "next-themes": "^0.2.1",
    "type-fest": "^4.0.0",
    "tslib": "^2.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.3.3",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.8",
    "postcss-cli": "^11.0.0",
    "typescript": "^5.1.6",
    "unocss": "^0.56.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
