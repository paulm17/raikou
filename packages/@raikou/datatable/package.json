{
  "name": "@raikou/datatable",
  "version": "0.0.5",
  "description": "The lightweight, dependency-free, dark-theme aware table component for your Raikou UI data-rich applications, featuring asynchronous data loading support, pagination, intuitive Gmail-style additive batch rows selection, column sorting, custom cell data rendering, row expansion, nesting, context menus, and much more",
  "license": "MIT",
  "sideEffects": false,
  "main": "./cjs/index.cjs",
  "module": "./esm/index.mjs",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.mts",
        "default": "./esm/index.mjs"
      },
      "require": {
        "types": "./lib/index.d.ts",
        "default": "./cjs/index.cjs"
      }
    }
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^17.0.0",
    "@raikou/core": "0.0.5",
    "@raikou/hooks": "0.0.5",
    "@stylefusion/react": "^0.0.25",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@raikou-tests/core": "workspace:*",
    "@raikou/core": "workspace:*",
    "@raikou/hooks": "workspace:*",
    "@types/lodash": "^4.17.13"
  },
  "publishConfig": {
    "access": "public"
  }
}
